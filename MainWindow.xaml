<Window x:Name="EUROJACKPOT" x:Class="Eurojackpot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eurojackpot"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="LOTO" Height="400" Width="400" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/world-lotteries-jpg.webp"/>
    </Window.Background>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="EUROJACKPOT" HorizontalAlignment="Center" TextAlignment="Center" FontSize="25" FontFamily="Times New Roman" Grid.Row="0" Margin="5" VerticalAlignment="Top" Width="200" FontWeight="Bold">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF5F692D" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Background>
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFCA8B3A" Offset="0.004"/>
                    <GradientStop Color="#FFBF8336" Offset="0.351"/>
                    <GradientStop Color="#FFCA8B3A" Offset="0.335"/>
                    <GradientStop Color="#FFE3E341" Offset="0.508"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <TextBox x:Name="txtMainNumbers"   Grid.Row="1" Height="25" Width="220" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" 
                 HorizontalContentAlignment="Center" />
        <TextBox x:Name="txtExtraNumbers" Grid.Row="1"  Height="25" Width="60"  VerticalAlignment="Center" HorizontalAlignment="Right" VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center" Margin="10" />

        <Button x:Name="btnGenerate" Content="Generate"  Click="btnGenerate_Click" Grid.Row="2" Height="32" Width="120" VerticalAlignment="Top" HorizontalAlignment="Center" VerticalContentAlignment="Center"
                 FontSize="20" Margin="0,0,0,10"/>
    </Grid>
</Window>
